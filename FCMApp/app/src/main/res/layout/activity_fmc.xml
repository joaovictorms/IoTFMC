<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".FMC">

    <Button
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#203354"
        android:text="Frequência Cardíaca Máxima:"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/txtFMC"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="120dp"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txtCaminhadaRap"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="280dp"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txtTrote"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="320dp"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txtCorridaLeve"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="360dp"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txtCorridaModerada"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="400dp"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txtCorridaIntensa"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="440dp"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="20dp"/>


</FrameLayout>